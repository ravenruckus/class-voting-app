pipeline {
    agent none

    stages{
        stage("build"){
            when{
                changeset "**/result/**"
            }

            agent{
                docker{
                    image 'node:8.16.0-alpine'
                }
            }

            steps{
                echo 'Compiling result app..'
                dir('result'){
                    sh 'npm install'
                }
            }
        }
        stage("test"){
            when{
                changeset "**/result/**"
            }
            agent{
                docker{
                    image 'node:8.16.0-alpine'
                }
            }
            steps{
                echo 'Running Unit Tests on result app..'
                dir('result'){
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
    }
}
